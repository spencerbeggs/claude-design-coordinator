{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationDir": "./dist",
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": ["ES2022"],
		"module": "ES2022",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2022",
		"types": ["node"]
	},
	"exclude": ["node_modules", "dist"],
	"include": ["**/*.ts"]
}
